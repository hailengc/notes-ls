@import "whitespace-reset.css"
@import "mixins"

/* box-sizing reset */
*
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

*, *:before, *:after
  -webkit-box-sizing: inherit
  -moz-box-sizing: inherit
  box-sizing: inherit

/* native implementationi reset */
textarea, input, button, select 
  font-family: inherit
  font-size: inherit

body
  font: font

main
  max-width: 800px
  margin: 0 auto
  clear: both

h1
  margin: 20px 0 10px 0

h2 
  font-size: 1.5em

h3 
  font-size: 1.2em
    
#index
  li
    display: inline-block
    width: 100px
    margin: 0 20px 20px 0
    vertical-align: top
    img 
      display: block
      width: 100%
      margin: 0 10px 10px 0

.button
  button() 

form
  dt
    padding: 0 0 5px 0
  dd
    padding: 0 0 20px 0
  input[type="text"],
  input[type="date"],
  input[type="url"],
  input[type="number"]
    width: 100%
    padding: 5px 8px
    border: 1px solid colors.border
    border-radius: 6px

header
  max-width: 800px
  margin: 0 auto

#cart
  position: relative
  float: right
  width: 50%
  z-index: 2
  text-align: right
  label, p, a
    padding: 2px 3px
    cursor: pointer
  label, a
    display: inline-block  
  input
    display: none
    &:checked
      + #items // immediately followed
        display: block
  #items
    display: none
    position: absolute
    top: 100%
    right: 0
    padding: 5px
    color: colors.button.fg
    background: colors.button.bg
    li
      text-align: left
      padding: 5px 0
      font-size: 12px
    small
      float: right
      margin-left: 10px
    li:hover
      background: colors.button.hover
    a
      position: relative
      float:left
      width: 12px
      height: 12px
      margin: 0 5px 0 0
      overflow: hidden
      text-indent: 9999px
      transform: rotate(45deg)
      &:before,
      &:after
        position: absolute
        content: ""
        background: colors.delete
      &:before
        top: 0
        bottom: 0
        left: 50%
        margin-left: -1px
        width: 2px
      &:after
        top: 50%
        right: 0
        left: 0
        margin-top: -1px
        height: 2px
      &.button
        float: right
        margin: 10px 0 5px 0
        padding: 4px 8px
        width: auto
        height: auto
        text-indent: 0
        transform: none
        font-size: 15px
        color: colors.button.bg
        background: colors.button.text
        &:before,
        &:after
          background: transparent

  

